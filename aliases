# Git
alias g="git"
alias gc="git commit"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bake="bundle exec rake"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias r="script/rails"
alias s="rspec"
alias rk="rake"

# The silver searcher instead of Ack
alias ack="ag"

# General
alias mkdir='mkdir -p'
alias ls='ls -G'
alias tlf="tail -f"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

